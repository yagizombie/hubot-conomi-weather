module.exports = (robot) ->
    robot.respond /(天気)$/i, (msg) ->
        get_weather_info msg

    robot.respond /(.*)の(天気)$/i, (msg) ->
        id = get_id msg, msg.match[1]
        if id != ""
            get_weather_info msg, id

    robot.respond /(天気詳細)$/i, (msg) ->
        get_weather_info_detail msg

    robot.respond /(.*)の(天気詳細)$/i, (msg) ->
        id = get_id msg, msg.match[1]
        if id != ""
            get_weather_info_detail msg, id

    get_id = (msg, key) ->
        if key of table == true
            return table[key]
        else
            msg.send "どこだ?" + key + "...ちょっと、分からないなぁ (oops) "
            return ""

    get_weather_info = (msg, id='130010') ->
        p = "/forecast/webservice/json/v1?city=" + encodeURIComponent(id)
        req = http.get { host:'weather.livedoor.com', path:p }, (res) ->
            contents = ""
            res.on 'data', (chunk) ->
                contents += "#{chunk}"
            res.on 'end', () ->
                j = JSON.parse contents
                forecast = j['forecasts'][0]
                rep = forecast['dateLabel'] + "(" + forecast['date'] + ") の『"
                rep +=  j['title'] + "』は" + forecast['telop'] + "だよ\n"
                forecast = j['forecasts'][1]
                rep += "ちなみに" + forecast['dateLabel'] + "(" + forecast['date'] + ") は"
                rep += forecast['telop'] + "らしいね\n"
                msg.send rep

        req.on "error", (e) ->
            msg.send "(fu) ひでぶっ!!  ... {e.message}"

